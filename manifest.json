{
  "name": "Hour You?",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Replaces dollars with hours worked.",
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ],
  "background": {
    "page": "pages/background.html"
  },
  "options_page": "pages/options.html",
  "browser_action": {
    "default_icon": {
      "19": "img/clock19.png",
      "38": "img/clock38.png"
    },
    "default_title": "Hour You?"
  },
  "icons": {
    "16": "img/clock16.png",
    "48": "img/clock48.png",
    "128": "img/clock128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["wages.js", "hour-you.js"],
      "run_at" : "document_end"
    }
  ],
  "content_security_policy": "default-src 'none'; script-src 'self'"
}
